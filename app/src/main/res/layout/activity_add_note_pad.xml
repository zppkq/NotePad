<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    tools:context=".AddNotePad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_marginTop="5dp"
            android:id="@+id/btn_return"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/to_return"
            android:onClick="onClick" />

        <ImageButton
            android:layout_marginTop="9dp"
            android:id="@+id/btn_cx"
            android:layout_width="0dp"
            android:layout_weight="23"
            android:layout_height="23dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/chexiao_copy"
            android:onClick="onClick" />

        <ImageButton
            android:layout_marginTop="7dp"
            android:id="@+id/btn_hf"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/huifu"
            android:onClick="onClick" />

        <ImageButton
            android:id="@+id/btn_save"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/gou"
            android:onClick="onClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="标题"
            android:textColor="#000"
            android:textSize="35sp" />

        <EditText

            android:id="@+id/et_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:hint="在此输入标题" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:text="2020年12月15日15:33"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_content"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>